<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.expensivebelly.dagger2retaingraph">

    <application
        android:name=".activity.RetainGraphApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="android.max_aspect"
            android:value="2.1"/>

        <activity android:name=".LauncherActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.RetainGraphActivity"/>
        <activity android:name=".fragment.RetainGraphMasterDetailActivity"/>
        <activity android:name=".loaders.LoadersActivity"/>
    </application>

</manifest>